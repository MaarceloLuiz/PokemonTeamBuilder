<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="385.0" prefWidth="439.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marceloluiz.PokeAPITeamBuilder.gui.PokedexController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Pokedex">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <HBox prefHeight="43.0" prefWidth="439.0">
         <children>
            <TextField fx:id="pokeSearch" prefHeight="26.0" prefWidth="358.0" />
            <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#onActionSearchBtn" text="Button">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tableViewPokedex" prefHeight="131.0" prefWidth="439.0">
        <columns>
          <TableColumn fx:id="tableColumnID" minWidth="0.0" prefWidth="98.0" text="ID" />
            <TableColumn fx:id="tableColumnName" prefWidth="152.0" text="Name" />
            <TableColumn fx:id="tableColumnType" prefWidth="165.0" text="Type" />
        </columns>
      </TableView>
      <HBox prefHeight="198.0" prefWidth="456.0">
         <children>
            <ImageView fx:id="pokeImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ProgressBar fx:id="statsProgressBar" prefWidth="200.0" progress="0.0" />
         </children>
      </HBox>
   </children>
</VBox>
